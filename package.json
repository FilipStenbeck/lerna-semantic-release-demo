{
  "name": "semanantic-lerna",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "main": "index.js",
  "scripts": {
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "bootstrap": "lerna bootstrap",
    "changed": "lerna changed",
    "commit": "git-cz",
    "diff": "lerna diff",
    "build": "lerna run build",
    "test": "lerna run test",
    "release": "lerna version --yes --conventional-commits -m \"chore(release): publish %s\"; lerna exec npm publish",
    "ls": "lerna ls"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "commitizen": "^3.0.4",
    "corp-semantic-release": "^6.4.0",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.1.3",
    "lerna": "3.6.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "registry": "http://localhost:4873/#/"
  },
